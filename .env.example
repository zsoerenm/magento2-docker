# Copy this file to .env and fill in your actual values

# Do not restart docker containers during development
export DOCKER_RESTART_POLICY=no
# Bind the whole magento installation into the containers during development (building it would take too much time)
export DOCKER_MAGENTO_VOLUME=./src:/var/www/html

# Admin configuration (not committed to Git)
export BACKEND_FRONTNAME=admin_lohag
export ADMIN_EMAIL=your-email@example.com
export ADMIN_FIRSTNAME=John
export ADMIN_LASTNAME=Doe
export TRANS_EMAIL_NAME=YourStoreName
export TRANS_EMAIL_ADDRESS=your-email@example.com

# SMTP configuration (not committed to Git)
export SMTP_TRANSPORT=smtp
export SMTP_HOST=mail.example.com
export SMTP_PORT=587
export SMTP_USERNAME=your-username
# The SMTP password is saved in docker/secrets/smtp_password.txt
export SMTP_AUTH=login # none, plain or login
export SMTP_SSL=tls # ssl or tls

# Database configuration
export DB_USER=magento2
export DB_NAME=magento2
# The database password is saved in docker/secrets/db_password.txt

# OpenSearch password (not committed to Git)
export OPENSEARCH_PASSWORD=YourStr0ngP@ssw0rd!

# Caddy/TLS configuration
# For production with Let's Encrypt, uncomment and set these:
# export CADDY_EMAIL=your-email@example.com
# export DOMAIN=yourdomain.com
# For development with mkcert certificates (default):
# export CADDY_CERT_FILE=./certs/cert.pem
# export CADDY_KEY_FILE=./certs/key.pem
